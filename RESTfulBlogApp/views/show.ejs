<% include ./partials/header %>
<div class='ui main container segment' style="margin: 7em; width: 50%">
    <div class='ui huge header'><%= blog.title %></div>
    <div class='ui top attached'>
        <div class='item'>
            <img src='<%= blog.image %>' class='ui centered rounded image' style='width: 50%; height: 50%;'>
            <div class='content'>
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p> <!-- here we can interpret code properly with (< %-) instead of (< %=) -->
            </div>
            
            <div style='padding: 20px 0px 0px 0px;'>
                <a href='/blogs/<%= blog._id %>/edit' class='ui green tiny button'>Edit</a>
                <form method='POST' action='/blogs/<%= blog._id %>?_method=DELETE' style='display: inline'>
                    <button class='ui red tiny button'>Delete</button>
                </form> 
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>
